<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.nmssdmf.test.activity.TagLayoutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.nmssdmf.gitlib.view.TagLayout
                android:id="@+id/tl_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:horizontal_space="3dp"
                app:vertical_space="3dp"
                app:horizontal_count="8"/>


            <com.nmssdmf.gitlib.view.TagLayout
                android:id="@+id/tl_irregular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:horizontal_space="3dp"
                app:vertical_space="3dp"/>

        </LinearLayout>

    </ScrollView>

</layout>
